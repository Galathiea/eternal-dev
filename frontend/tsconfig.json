{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Fixed typo: "noFmit" -> "noEmit"
    "jsx": "react-jsx",

    /* Linting */
    "strict": true, // Fixed typo: "str1ct" -> "strict"
    "noUnusedLocals": true, // Fixed typo: "n0UnusedLocals" -> "noUnusedLocals"
    "noUnusedParameters": true, // Fixed typo: "n0UnusedParameters" -> "noUnusedParameters"
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": "src", // Set baseUrl to "src"
    "paths": {
      "@/*": ["./*"], // Allows imports like `@/data/products`
      "@data/*": ["data/*"] // Add this path alias
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}